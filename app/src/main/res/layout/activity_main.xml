<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--android:theme="?attr/actionBarTheme"-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:minHeight="?attr/actionBarSize"
            android:clickable="true"
            android:focusable="true"
            app:contentInsetStart="0dp"
            android:alpha="0.8">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:contentInsetStart="0dp"
                    android:padding="0dp"
                    >
                    <TextView
                        android:id="@+id/Tv_net_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:text="节点数：0 邻居数：0 丢失数：0"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/hr_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:text="心率数据"
                        android:textSize="17sp"
                        android:textColor="#ffffff"/>

                </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_marginTop="56dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            />

<!--        <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--            android:id="@+id/fab"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:background="@drawable/floatbutton"-->
<!--            android:src="@drawable/ic_sos"-->
<!--            app:borderWidth="0dp"-->
<!--            app:rippleColor="#C9E35F22"-->
<!--            app:elevation="8dp"-->
<!--            app:pressedTranslationZ="16dp"-->
<!--            android:layout_gravity="right|bottom"-->
<!--            android:layout_margin="16dp"-->
<!--            android:contentDescription="clicked"-->
<!--            />-->

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end|bottom"
            fab:fab_addButtonColorNormal="#1565C0"
            fab:fab_addButtonColorPressed="#2272CD"
            fab:fab_addButtonPlusIconColor="@color/lightblue"
            fab:fab_labelStyle="@style/fab_labels_style"
            android:layout_marginBottom="100dp"
            android:layout_marginEnd="0dp"
            fab:fab_size="normal">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_action_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/dodgerblue"
                fab:fab_title="呼救"
                android:src="@drawable/ic_bell_o"
                fab:fab_size="mini"
                />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_action_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/dodgerblue"
                fab:fab_title="语音"
                android:src="@drawable/ic_microphone"
                fab:fab_size="mini"
                />
        </com.getbase.floatingactionbutton.FloatingActionsMenu>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!--侧滑界面,必须设置layout_gravity属性,表示侧滑方向-->
    <com.google.android.material.navigation.NavigationView
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        android:background="@color/royalblue"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
         />

</androidx.drawerlayout.widget.DrawerLayout>